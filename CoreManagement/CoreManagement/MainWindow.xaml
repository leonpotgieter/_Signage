		<DataTemplate x:Key="dtSchedule">
	    	<Border BorderBrush="DarkGray" BorderThickness="0,0,0,1" Margin="0,0,0,0.5" Padding="5" Width="Auto" HorizontalAlignment="Stretch">
	    		<StackPanel Orientation="Vertical">
	    			<StackPanel Orientation="Horizontal">
	    		   	  <TextBlock Text="Start: " Foreground="White" Width="75" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
	    		      <TextBlock Text="{Binding Loopstart}" Foreground="LightGreen" Width="120" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>	   
					  <TextBlock Text="  End: " Foreground="White" Width="50" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
			        <TextBlock Text="{Binding Loopend}" Foreground="Red" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
				   </StackPanel>
	    		   <StackPanel Orientation="Horizontal">
	    		   	  <TextBlock Text="Screen: " Foreground="White" Width="75" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
	    		      <TextBlock Text="{Binding Screenname}" Foreground="White" Width="120" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>	   
					  <TextBlock Text="  Group: " Foreground="White" Width="50" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
			        <TextBlock Text="{Binding Groupname}" Foreground="Green" FontStyle="Italic" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
				   </StackPanel>
				   <StackPanel Orientation="Horizontal">
	    		   	  <TextBlock Text="Media Loop: " Foreground="White" Width="75" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
	    		      <TextBlock Text="{Binding Loopname}" Foreground="LightBlue" FontStyle="Italic" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
				   </StackPanel>
				</StackPanel>
			</Border>
		</DataTemplate>
		<DataTemplate x:Key="binTemplate">
	    	<Border BorderBrush="Transparent" BorderThickness="0,0,0,0" Margin="0,0,0,0" Width="Auto" HorizontalAlignment="Stretch"/>
		</DataTemplate>
		<DataTemplate x:Key="dtcbScreen">
	    	<Border BorderBrush="White" BorderThickness="0,0,0,0" Margin="0,0,0,0.5" Width="Auto" HorizontalAlignment="Stretch">
	    		<StackPanel Orientation="Vertical">
				 <TextBlock Text="{Binding Screenname}" Foreground="White" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
			     <TextBlock Text="{Binding Description}" Foreground="AntiqueWhite" FontStyle="Italic" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
				</StackPanel>					
			</Border>
		</DataTemplate>
		<DataTemplate x:Key="dtcbScreenGroup">
	    	<Border BorderBrush="White" BorderThickness="0,0,0,0" Margin="0,0,0,0.5" Width="Auto" HorizontalAlignment="Stretch">
	    		<StackPanel Orientation="Vertical">
				 <TextBlock Text="{Binding Name}" Foreground="White" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
			     <TextBlock Text="{Binding Description}" Foreground="AntiqueWhite" FontStyle="Italic" Width="Auto" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
				</StackPanel>					
			</Border>
		</DataTemplate>		
        <DataTemplate x:Key="dtContentTemplateForLoops">
            <Border dc:DragDrop.IsDragSource="True" dc:DragDrop.IsDropTarget="True" BorderThickness="0,0,0,0.5" Opacity="0.9" BorderBrush="DarkGray" Width="Auto" Margin="0,0,0,0" HorizontalAlignment="Stretch" Background="#CC000002" >
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2,0,0,0">
                        <Border Width="40" Height="40" Background="Transparent">
                            <Image Source="{Binding Snapshot}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" Margin="2,2,2,2"/>
                        </Border>
                        <StackPanel Orientation="Vertical" Margin="5,-1,0,-1">
                            <TextBlock Text="{Binding Name}" Foreground="White" Width="Auto"/>
                            <TextBlock Text="{Binding Description}" Foreground="Gray" Width="Auto" Height="Auto"/>
                            <TextBlock Text="{Binding Order}" Foreground="Gray" Width="Auto" Height="Auto"/>
                        </StackPanel>
                    </StackPanel>
                    <Label Content="{Binding Contenttype}" BorderBrush="White" BorderThickness="0.5" Background="Black" Foreground="White" HorizontalAlignment="Right" HorizontalContentAlignment="Center">
                        <Label.LayoutTransform>
                            <RotateTransform Angle="270" />
                        </Label.LayoutTransform>
                    </Label>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="DropAdornerTemplate">
			<ContentControl>
				<ContentControl.RenderTransform>
					<RotateTransform Angle="0" />
				</ContentControl.RenderTransform>
			</ContentControl>		
        </DataTemplate>
        <Style x:Key="BlackListboxStyle">
            <Style.Resources>
                <!-- Background of selected item when focussed -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="DarkBlue" />
                <!-- Background of selected item when not focussed -->
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="DarkGreen" />
            </Style.Resources>
        </Style>
        <Style x:Key="StretchedContainerStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
		<DataTemplate x:Key="dtAllMedia">
		 	<Border BorderBrush="Black" dc:DragDrop.IsDragSource="True" dc:DragDrop.IsDropTarget="True" BorderThickness="1" Width="Auto" Margin="0,0,0,0" HorizontalAlignment="Stretch" Background="#CC000002" >
		 		<Grid>
		 			<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2,0,0,0">
		 				<Border Width="40" Height="40" Background="Transparent">
		 				   <Image Source="{Binding Snapshot}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" Margin="2,2,2,2"/>		
						</Border>
						<StackPanel Orientation="Vertical" Margin="5,-1,0,-1">
		            		<TextBlock Text="{Binding Name}" Foreground="White" Width="Auto"/>        	
							<TextBlock Text="{Binding Description}" Foreground="Gray" Width="Auto" Height="Auto"/>        	
						</StackPanel>
					</StackPanel>
					<Label Content="{Binding Contenttype}" BorderBrush="White" BorderThickness="0.5" Background="Black" Foreground="White" HorizontalAlignment="Right" HorizontalContentAlignment="Center">
							<Label.LayoutTransform>
								<RotateTransform Angle="270" />
							</Label.LayoutTransform>
					</Label>	
				</Grid>
					
	        </Border>
        </DataTemplate>
		<DataTemplate x:Key="dtTickers">
		 	<Border BorderBrush="DarkGray" BorderThickness="0,0,0,1" CornerRadius="0" Background="Transparent" Opacity="1" Height="Auto" >
	            	<StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">	
		            	<TextBlock Text=" Name: " Foreground="AntiqueWhite" /> 
						<TextBlock Text="{Binding Name}" Foreground="White" TextTrimming="CharacterEllipsis" Width="120" HorizontalAlignment="Center"/>        	
						<TextBlock Text="  Description: " Foreground="AntiqueWhite" /> 
						<TextBlock Text="{Binding Description}" Foreground="White" TextTrimming="CharacterEllipsis" Width="150" HorizontalAlignment="Center"/>        	
						<TextBlock Text="   Text: " Foreground="AntiqueWhite" FontStyle="Italic" />
	            		<TextBlock Text="{Binding Metadata8}" TextTrimming="CharacterEllipsis" Foreground="{Binding Metadata4}" Background="{Binding Metadata6}" FontFamily="{Binding Metadata2}" HorizontalAlignment="Center" Width="Auto"/>
					</StackPanel>
	        </Border>
        </DataTemplate>
		<DataTemplate x:Key="dtLoopZones">
		 	<Border x:Name="ZoneDT" BorderBrush="Black" BorderThickness="1" CornerRadius="3" Width="110" Background="DimGray" Opacity="1" Height="32" >
	            	<StackPanel Orientation="Vertical" Width="Auto" HorizontalAlignment="Stretch">	
		            	<TextBlock Text="{Binding Zonename}" Foreground="White" TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Center"/>        	
						<TextBlock Text="{Binding Zonedescription}" FontStyle="Italic" TextTrimming="CharacterEllipsis" Foreground="LightBlue" HorizontalAlignment="Center" Width="Auto"/>
					</StackPanel>
	        </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                    <Setter TargetName="ZoneDT" Property="Background" Value="DarkGreen"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
		<DataTemplate x:Key="datatemplateLoop">
		 	<Border BorderBrush="Black" BorderThickness="0.5,0.5,2,2" CornerRadius="5" Margin="0,1,0,1"  Padding="0" Width="Auto" Height="Auto" Background="Transparent" Opacity="1">
	    	       <StackPanel Orientation="Vertical">
		    	       	<StackPanel Orientation="Horizontal" Margin="5,-1,0,-1">
		    	       		<TextBlock Text="Loop: " Foreground="White" Width="70" />
		            		<TextBlock Text="{Binding Name}" Foreground="White" Width="230" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>        	
						</StackPanel>
						<StackPanel Orientation="Horizontal" Margin="5,-1,0,-1">
							<TextBlock Text="Description: " Foreground="White" Width="70" />
							<TextBlock Text="{Binding Description}" FontStyle="Italic" Foreground="Orange" TextTrimming="CharacterEllipsis" Width="230"/>	       	
						</StackPanel>
						<StackPanel Orientation="Horizontal" Margin="5,-1,0,-1">
							<TextBlock Text="Template: " Foreground="White" Width="70" />
							<TextBlock Text="{Binding Templatename}" Foreground="Yellow" Width="230" TextTrimming="CharacterEllipsis"/>
						</StackPanel>
					</StackPanel>           	
			</Border>
        </DataTemplate>
         <DataTemplate x:Key="imageDataTemplate">
         	<Border x:Name="borderImage"  dc:DragDrop.IsDragSource="True" dc:DragDrop.IsDropTarget="True" Background="Black" CornerRadius="5" Margin="2,2,2,2" BorderBrush="DarkGray" BorderThickness="0.5,0.5,0.5,0.5" Padding="1,1,1,1" HorizontalAlignment="Center" >   
				<StackPanel Height="Auto" VerticalAlignment="Stretch">
                    <Label x:Name="labelImage" Content="{Binding Name}" FontSize="10" FontFamily="Grover Italic" Background="Black" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="3,0,3,0" />    
					<Border BorderBrush="DarkGray" BorderThickness="0.5" Margin="4,4,4,4">
					   <Image Margin="0" Source="{Binding Snapshot}" Width="{Binding Value, ElementName=sliderImageSize}" Height="{Binding Value, ElementName=sliderImageSize}" Stretch="UniformToFill" />	
					</Border>
                    
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderImage" Property="Background" Value="Blue"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                    <Setter TargetName="borderImage" Property="Background" Value="Black" />
                    <Setter TargetName="labelImage" Property="Foreground" Value="Yellow" />
                    <Setter TargetName="borderImage" Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
		
		<DataTemplate x:Key="imageDataAllMediaTemplate">
         	<Border x:Name="borderImage"  dc:DragDrop.IsDragSource="True" dc:DragDrop.IsDropTarget="True" Background="Black" CornerRadius="5" Margin="2,2,2,2" BorderBrush="DarkGray" BorderThickness="0.5,0.5,0.5,0.5" Padding="1,1,1,1" HorizontalAlignment="Center" >   
				<StackPanel Height="Auto" VerticalAlignment="Stretch">
                    <Label x:Name="labelImage" Content="{Binding Name}" FontSize="10" FontFamily="Grover Italic" Background="Black" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="3,0,3,0" />    
					<Border BorderBrush="DarkGray" BorderThickness="0.5" Margin="4,4,4,4">
					   <Image Margin="0" Source="{Binding Snapshot}" Width="{Binding Value, ElementName=sliderImageLoopAllMedia}" Height="{Binding Value, ElementName=sliderImageLoopAllMedia}" Stretch="UniformToFill" />	
					</Border>
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderImage" Property="Background" Value="Blue"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                    <Setter TargetName="borderImage" Property="Background" Value="Black" />
                    <Setter TargetName="labelImage" Property="Foreground" Value="Yellow" />
                    <Setter TargetName="borderImage" Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
            
        <DataTemplate x:Key="datatemplateScreen">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Screenname}" Width="150"/>
				<TextBlock Text="{Binding Groupid}" Width="100"/>
                <TextBlock Text="{Binding Description}" Width="200"/>
                <TextBlock Text="{Binding Ip}" Width="100"/>
            </StackPanel>
        </DataTemplate>
		<DataTemplate x:Key="datatemplateZone">
            	<Border Padding="2" Background="Transparent" Opacity="0.9" BorderThickness="0,0,0,2" BorderBrush="Black" HorizontalAlignment="Stretch">
            		<StackPanel Orientation="Vertical" Width="Auto" HorizontalAlignment="Stretch">
            			<StackPanel Orientation="Horizontal">
            			   <TextBlock Foreground="White" Text="{Binding Zonename}" Width="Auto" HorizontalAlignment="Stretch" />
						   <TextBlock Text=": " />
						   <TextBlock Text="{Binding Zonedescription}" Foreground="LightGray" FontStyle="Italic" Width="auto" HorizontalAlignment="Center"/>	      			
						</StackPanel>
						<StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
							<TextBlock Text="X:" Foreground="LightGray" Width="25" HorizontalAlignment="Right"/>
            				<TextBlock Text="{Binding X}" Foreground="LightGray" Width="50" HorizontalAlignment="Left"/>
							<TextBlock Text="Y:" Foreground="LightGray" Width="25" HorizontalAlignment="Right"/>
            				<TextBlock Text="{Binding Y}" Foreground="LightGray" Width="50" HorizontalAlignment="Left"/>
							<TextBlock Text="W:" Foreground="LightGray" Width="25" HorizontalAlignment="Right"/>
            				<TextBlock Text="{Binding Width}" Foreground="LightGray" Width="50" HorizontalAlignment="Left"/>
							<TextBlock Text="H:" Foreground="LightGray" Width="25" HorizontalAlignment="Right"/>
            				<TextBlock Text="{Binding Height}" Foreground="LightGray" Width="50" HorizontalAlignment="Left"/>
						</StackPanel>       		
						<StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
							<TextBlock Text="Opacity:" Foreground="LightGray" Width="50" HorizontalAlignment="Right"/>
            				<TextBlock Text="{Binding Opacity}" Foreground="LightGray" Width="50" HorizontalAlignment="Left"/>
						</StackPanel>
					</StackPanel>
				</Border>
        </DataTemplate>
		<DataTemplate x:Key="datatemplateTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" Width="150"/>
				<TextBlock Text="{Binding Description}" Width="187"/>
            </StackPanel>
        </DataTemplate>
		<DataTemplate x:Key="datatemplateUser">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Loginid}" Width="120"/>
				<TextBlock Text="{Binding Fullname}" Width="150"/>
                <TextBlock Text="{Binding Lastlogin}" Width="150"/>
                <TextBlock Text="{Binding Groupid}" Width="150"/>
            </StackPanel>
        </DataTemplate>
		<DataTemplate x:Key="datatemplateGroup">
            <StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Name}" Width="150"/>
                <TextBlock Text="{Binding Description}" Width="200"/>
            </StackPanel>
        </DataTemplate>
		<Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Grid Background="#FF1F1A1A">
							<ContentPresenter RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" OpacityMask="Black"/>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True"/>
							<Trigger Property="IsDefaulted" Value="True"/>
							<Trigger Property="IsMouseOver" Value="True"/>
							<Trigger Property="IsPressed" Value="True"/>
							<Trigger Property="IsEnabled" Value="False"/>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="FontFamily" Value="SketchFlow Print"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontSize" Value="32"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>
	</Window.Resources>
